{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "ES6",                   // Ensures modern syntax
    "module": "NodeNext",                 // Compile as ES modules
    "moduleResolution": "NodeNext",         // Resolve modules like Node.js
    "strict": true,                     // Enable strict mode
    "esModuleInterop": true,            // Allow importing CommonJS modules as ESM
    "skipLibCheck": true,               // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
   },
  "include": [
    "index.ts",
    "src/**/*"
  ]
}
